  "scripts": {
    "dev": "npm run gen:contributes && node build.ts --mode=development",
    "gen:contributes": "npx ts-node scripts/generateContributes.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "npm run gen:contributes && rimraf out && node build.ts --mode=production",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "vscode:prepublish": "npm run build"
  },
