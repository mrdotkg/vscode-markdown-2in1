{
	"name": "vsc-markdown",
	"displayName": "Elegant Markdown Editor for VS Code",
	"description": "Instant Markdown rendering and editing with WYSIWYG support.",
	"version": "0.0.1",
	"publisher": "Butterops",
	"icon": "assets/images/logo.png",
	"engines": {
		"vscode": "^1.106.0"
	},
	"keywords": [
		"typora",
		"markdown",
		"editor",
		"wysiwyg",
		"rendering"
	],
	"categories": [
		"Themes",
		"Keymaps",
		"Visualization",
		"Notebooks",
		"Education"
	],
	"bugs": {
		"url": "https://github.com/mrdotkg/vsc-markdown/issues",
		"email": "grv.rkg@gmail.com"
	},
	"homepage": "https://github.com/mrdotkg/vsc-markdown/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/mrdotkg/vsc-markdown.git"
	},
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./out/extension.js",
	"pricing": "Free",
	"contributes": {
		"commands": [
			{
				"command": "vsc-markdown.switch",
				"title": "Switch markdown editor",
				"icon": {
					"dark": "./assets/images/switch.svg",
					"light": "./assets/images/switch_light.svg"
				}
			},
			{
				"command": "vsc-markdown.paste",
				"title": "Enhance paste in markdown"
			}
		],
		"keybindings": [
			{
				"command": "vsc-markdown.paste",
				"key": "ctrl+v",
				"mac": "cmd+v",
				"when": "!terminalFocus && !filesExplorerFocus && resourceLangId == markdown"
			},
			{
				"command": "vsc-markdown.switch",
				"key": "ctrl+alt+e",
				"mac": "ctrl+cmd+e",
				"when": "editorTextFocus && editorLangId == markdown"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "vsc-markdown.switch",
					"when": "resourceExtname == '.md'",
					"group": "navigation@-2"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "vsc-markdown",
				"displayName": "VSC Markdown Editor",
				"selector": [
					{
						"filenamePattern": "file:/**/*.md"
					},
					{
						"filenamePattern": "file:/**/*.markdown"
					}
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "Markdown Editor",
			"properties": {
				"vsc-markdown.openOutline": {
					"type": "boolean",
					"default": true,
					"description": "Open markdown outline."
				},
				"vsc-markdown.hideToolbar": {
					"type": "boolean",
					"default": true,
					"description": "Hide markdown toolbar."
				},
				"vsc-markdown.previewCode": {
					"type": "boolean",
					"default": true,
					"description": "Preview code in markdown."
				},
				"vsc-markdown.preventMacOptionKey": {
					"type": "boolean",
					"default": true,
					"description": "Prevent MacOS option key in the markdown editor."
				},
				"vsc-markdown.editorTheme": {
					"type": "string",
					"enum": [
						"Auto",
						"Light",
						"Solarized"
					],
					"default": "Auto",
					"markdownDescription": "The theme for the Markdown editor."
				},
				"vsc-markdown.previewCodeHighlight.style": {
					"type": "string",
					"enum": [
						"abap",
						"algol",
						"algol_nu",
						"arduino",
						"autumn",
						"borland",
						"bw",
						"colorful",
						"dracula",
						"emacs",
						"friendly",
						"fruity",
						"github",
						"igor",
						"lovelace",
						"manni",
						"monokai",
						"monokailight",
						"murphy",
						"native",
						"paraiso-dark",
						"paraiso-light",
						"pastie",
						"perldoc",
						"pygments",
						"rainbow_dash",
						"rrt",
						"solarized-dark",
						"solarized-dark256",
						"solarized-light",
						"swapoff",
						"tango",
						"trac",
						"vim",
						"vs",
						"xcode",
						"ant-design"
					],
					"default": "bw",
					"markdownDescription": "Default syntax highlight style of markdown preview code. Refer to [Chroma Style Gallery](https://xyproto.github.io/splash/docs/longer/all.html). Only applies when `#vsc-markdown.previewCode#` is enabled."
				},
				"vsc-markdown.previewCodeHighlight.showLineNumber": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Show line numbers in markdown preview code window. Only applies when `#vsc-markdown.previewCode#` is enabled."
				},
				"vsc-markdown.workspacePathAsImageBasePath": {
					"type": "boolean",
					"default": false,
					"description": "Using workspace path as markdown image base path."
				},
				"vsc-markdown.pasterImgPath": {
					"type": "string",
					"default": "image/${fileName}/${now}.png",
					"description": "Markdown paste image path, variables: workspaceDir, fileName, now."
				}
			}
		}
	},
	"scripts": {
		"dev": "node build.ts --mode=development",
		"lint:fix": "eslint src/**/*.ts --fix",
		"build": "rimraf out && node build.ts --mode=production",
		"package": "vsce package --no-dependencies",
		"publish": "vsce publish --no-dependencies",
		"vscode:prepublish": "npm run build"
	},
	"devDependencies": {
		"@types/node": "^22.10.0",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"esbuild": "^0.14.54",
		"esbuild-plugin-copy": "^1.3.0",
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-unused-imports": "^3.1.0",
		 "rimraf": "^6.0.1",
		 "@vscode/vsce": "^2.12.1"
	},
	"dependencies": {
		"date-format": "^4.0.14",
		"file-type": "^19.6.0",
		"highlight.js": "^11.10.0",
		"katex": "^0.16.2",
		"markdown-it": "^14.1.0",
		"markdown-it-anchor": "^9.2.0",
		"markdown-it-checkbox": "^1.1.0",
		"markdown-it-mermaid": "^0.2.5",
		"markdown-it-plantuml": "^1.4.1",
		"markdown-it-toc-done-right": "^4.2.0",
		"mustache": "^4.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"vditor": "^3.11.2"
	}
}
