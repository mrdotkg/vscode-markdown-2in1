    "menus": {
      "editor/title": [
        {
          "command": "markdown2in1.switch",
          "when": "resourceExtname == '.md'",
          "group": "navigation@-2"
        }
      ],
      "editor/context": [
        {
          "command": "markdown2in1.insertH1",
          "when": "editorTextFocus",
          "group": "1_modification@1"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "markdown2in1",
        "displayName": "Markdown 2-in-1",
        "selector": [
          {
            "filenamePattern": "file:/**/*.MD"
          },
          {
            "filenamePattern": "file:/**/*.mD"
          },
          {
            "filenamePattern": "file:/**/*.Md"
          },
          {
            "filenamePattern": "file:/**/*.md"
          },
          {
            "filenamePattern": "file:/**/*.markdown"
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Markdown Editor",
      "properties": {
        "markdown2in1.openOutline": {
          "type": "boolean",
          "default": true,
          "description": "Open markdown outline."
        },
        "markdown2in1.hideToolbar": {
          "type": "boolean",
          "default": false,
          "description": "Hide markdown toolbar."
        },
        "markdown2in1.previewCode": {
          "type": "boolean",
          "default": true,
          "description": "Preview code in markdown."
        },
        "markdown2in1.previewCodeHighlight.showLineNumber": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show line numbers in markdown preview code window. Only applies when `#markdown2in1.previewCode#` is enabled."
        },
        "markdown2in1.workspacePathAsImageBasePath": {
          "type": "boolean",
          "default": false,
          "description": "Using workspace path as markdown image base path."
        },
        "markdown2in1.pasterImgPath": {
          "type": "string",
          "default": "image/${fileName}/${now}.png",
          "description": "Markdown paste image path, variables: workspaceDir, fileName, now."
        }
      }
